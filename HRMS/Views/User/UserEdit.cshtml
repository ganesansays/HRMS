@using HRMS.Models;
@using HRMS.BusinessEntities;

@model ModelContainer<User>

@{
    @Html.Hidden("Id", @Model.Instance.Id)
        
    @Html.LabelFor(model => model.Instance.Name)
    @ControlHelper.RenderTextBoxFormControl(Html, "Name", Model.Instance.Name)

    @Html.LabelFor(model => model.Instance.Password)
    @ControlHelper.RenderPasswordBoxFormControl(Html, "Password", Model.Instance.Password)    

    @Html.LabelFor(model => model.Instance.Group)
    @ControlHelper.RenderDropDownFormControl(Html, "GroupId", Model.GetSelectList("Groups"))

}
