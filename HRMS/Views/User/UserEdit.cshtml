@using HRMS.Models;
@using HRMS.BusinessEntities;
@using HRMS.Utils;

@model User

@{
    @Html.Hidden("Id", @Model.Id)
        
    @Html.LabelFor(model => model.Name)
    @ControlHelper.RenderTextBoxFormControl(Html, "Name", Model.Name)
    <br />
    
    @Html.LabelFor(model => model.Password)
    @ControlHelper.RenderPasswordBoxFormControl(Html, "Password", Model.Password)    
    <br />
    
    @Html.LabelFor(model => model.Group)
    @ControlHelper.RenderDropDownFormControl(Html, "GroupId", ViewData.GetSelectList("Groups"))
    <br />
}
