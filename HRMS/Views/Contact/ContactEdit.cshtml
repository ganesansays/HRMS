@using HRMS.Models;
@using HRMS.BusinessEntities;

@model ModelContainer<Contact>

@{
    @Html.Hidden("Id", @Model.Instance.Id)
        
    @Html.LabelFor(model => model.Instance.Name)
    @ControlHelper.RenderTextBoxFormControl(Html, "Name", Model.Instance.Name)

    @Html.LabelFor(model => model.Instance.DOB)
    @ControlHelper.RenderTextBoxFormControl(Html, "DOB", Model.Instance.DOB)
    
    @Html.LabelFor(model => model.Instance.PhoneNumber)
    @ControlHelper.RenderTextBoxFormControl(Html, "PhoneNumber", Model.Instance.PhoneNumber)

    @Html.LabelFor(model => model.Instance.Email)
    @ControlHelper.RenderEmailBoxFormControl(Html, "Email", Model.Instance.Email)

    @Html.LabelFor(model => model.Instance.Url)
    @ControlHelper.RenderTextBoxFormControl(Html, "Url", Model.Instance.Url)
    
    @Html.LabelFor(model => model.Instance.Address)
    @ControlHelper.RenderTextBoxFormControl(Html, "Address", Model.Instance.Address)

    @Html.LabelFor(model => model.Instance.PinCodeId)
    @ControlHelper.RenderDropDownFormControl(Html, "PinCodeId", Model.GetSelectList("PinCodes"))
}
