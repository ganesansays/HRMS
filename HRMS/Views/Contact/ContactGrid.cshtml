@using HRMS.BusinessEntities;
@using HRMS.Models;
@using GridMvc.Html

@model ModelContainer<Contact>

@Html.Grid(Model.ListOfItems).Columns(columns =>
{
    columns.Add(item => item.Id).SetWidth(110);
    columns.Add(item => item.Name).Sortable(true).Filterable(true);
    columns.Add(item => item.PhoneNumber).Sortable(true).Filterable(true);
    columns.Add(item => item.Address).Sortable(true).Filterable(true);
    columns.Add(item => item.PinCode.Code).Sortable(true).Filterable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a onclick="deleteRow(@o.Id); return false;" href="javascript:deleteRow(@o.Id); return false;" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-minus"></span></a>);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a href="~/Contact/Edit/@o.Id" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-edit"></span></a>);
}).WithPaging(20)
