@using System.Web.Mvc.Html;

@helper RenderTextBoxFormControl(System.Web.Mvc.HtmlHelper Html, string name, string value)
{
    @Html.TextBox(name, //Name of the variable
        string.IsNullOrEmpty(value) ? string.Empty : value, //Value of the variable
        new { @class = "form-control" })
    @Html.ValidationMessage(name)
    <br />
}

@helper RenderTextBoxFormControl(System.Web.Mvc.HtmlHelper Html, string name, DateTime value)
{
    @Html.TextBox(name, //Name of the variable
        value == DateTime.MinValue ? string.Empty : value.ToString("yyyy-MM-dd"), //Value of the variable
        new { @class = "form-control", @type="date" })
    @Html.ValidationMessage(name)
    <br />
}

